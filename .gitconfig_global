[core]
  editor = vim
  # global gitignore
  excludesfile = ~/.gitignore_global
  # for windows
  #autocrlf = true
  # use aggressive compression
  # can make your repo smaller but can also be slow
  compression = 9
  # tells git to ignore file permission changes
  # filemode = false
  pager = 'less -FRSX'

[web]
  browser = firefox

[push]
  default = current

[color]
  ui = auto

[color "branch"]
	current = yellow bold
	local = green bold
  remote = cyan bold

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
  whitespace = red reverse

[color "status"]
	added = green bold
	changed = yellow bold
  untracked = red bold

[diff]
  tool = vimdiff

[difftool]
  prompt = true

